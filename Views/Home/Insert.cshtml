@model bfw_WebApp_ModelBinding_mit_Validierung.Models.Lagerware

@{
    Layout = null;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html lang="de">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width"/>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
            color: #333;
            background-color: #fff;
        }
        #insert-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f5f5f5;
        }
        div {
            margin-bottom: 1em;
        }
        .insertRow {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
        }
        .insertRow label {
            width: 200px;
            text-align: left;
            justify-self: center;
            margin-right: 10px;
        }
        .insertRow input {
            width: 200px;            
        }
        .btnContainer {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }
        .btnContainer button {
            width: 10em;
            padding: 0.5em;
            border-radius: 5px;
            
        }
        .errorMessage {
            color: red;
            font-size: 0.8em;
            background-color: rgba(224,142,142,0.56);
            border-radius: 10px;
            padding: 5px 0;
            margin: 5px;
            max-width: 20vw;
        }
        
    </style>
    <title>Insert</title>
</head>
<body>
<div id="insert-container">
    <h1>Modelbinding & Validation</h1>
    
    <form asp-action="Insert" method="post">
        <div class="insertRow">
            <label asp-for="Artikelbezeichnung"></label>
            <input asp-for="Artikelbezeichnung" /> <span class="errorMessage" asp-validation-for="Artikelbezeichnung"></span>
        </div>
        <div class="insertRow">
            <label asp-for="Preis"></label>
            <input asp-for="Preis" /> <span class="errorMessage" asp-validation-for="Preis"></span>
        </div>
        <div class="insertRow">
            <label asp-for="Lagerbestand"></label>
            <input asp-for="Lagerbestand" /> <span class="errorMessage" asp-validation-for="Lagerbestand"></span>
        </div>
        <div class="insertRow">
            <label asp-for="IstFreigegeben"></label>
            <input asp-for="IstFreigegeben" /> <span class="errorMessage" asp-validation-for="IstFreigegeben"></span>
        </div>
        <div class="insertRow">
            <label asp-for="LagerndSeit"></label>
            <input asp-for="LagerndSeit" /> <span class="errorMessage" asp-validation-for="LagerndSeit"></span>
        </div>
        <div class="btnContainer insertRow">
            <button type="submit">Speichern</button>
            <button type="reset">Reset</button>
            <button type="button" onclick="window.location.href='/home/index'">Abbrechen</button>
        </div>
        
    </form>

</div>
</body>
</html>