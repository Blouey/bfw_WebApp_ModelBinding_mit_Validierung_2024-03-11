@model bfw_WebApp_ModelBinding_mit_Validierung.Models.Lagerware

@{
    Layout = null;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html lang="de">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width"/>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
            color: #333;
            background-color: #fff;
        }
        #anzeige-container {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f5f5f5;
        }
    </style>
    <title>Anzeige</title>
</head>
<body>
<div id="anzeige-container">
    <h1>Modelbinding & Validation</h1>
    <a href="/home/index">Zur√ºck zur Startseite</a>
    <ul>
        <li>Artikelbezeichnung: @Model.Artikelbezeichnung</li>
        <li>Preis: @Model.Preis</li>
        <li>Lagerbestand: @Model.Lagerbestand</li>
        <li>Freigabe: @Model.IstFreigegeben</li>
        <li>Lagernd seit: @Model.LagerndSeit</li>
    </ul>
</div>
</body>
</html>